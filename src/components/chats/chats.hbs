<div class="chats row row_between row_height">
    <div class="col-md-4 overflow-scroll chats__contacts ">
        <div class="row row_nowrap row_gap  row_between text-right m-1">
            <div>
            {{{Button
                     class="btn btn_full btn_md btn_ocean btn_corner"
                     onClick=toggleCreateChatModal
                     label="Новый чат"
                     name="createChat"
                     type="button" }}}
            </div>
            <div>
                 {{{Button
                     icon='<svg width="6" height="10" viewBox="0 0 6 10" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M1 9L5 5L1 1" stroke="#999999"/></svg>'
                     onClick=onProfile
                     class="btn btn_md btn_plain btn_light"
                     label="Профиль"
                     name="login"
                     type="button" }}}
            </div>

        </div>
        <div class="chats__search">
            {{{ Field label="поиск" class="text-input_search corner-small" }}}
        </div>
        {{{ Contacts
                setActive=setActive

         }}}
    </div>
    <div class="col-md">
        {{{ Chat
                user=user
                messages=state.messages
                toggleChatsMenu=toggleChatsMenu
                toggleAppendUserModal=toggleAppendUserModal
                toggleRemoveUserModal=toggleRemoveUserModal
                chatsMenu=state.chatsMenu
        }}}
    </div>
    {{#Modal open=state.createChatModal toggle=toggleCreateChatModal  }}
        {{{ AppendChatModal toggle=toggle }}}
    {{/Modal}}

    {{#Modal open=state.appendUserModal toggle=toggleAppendUserModal  }}
        {{{ AppendUserModal activeChatId=activeChatId   }}}
    {{/Modal}}

    {{#Modal open=state.removeUserModal toggle=toggleRemoveUserModal   }}
        {{{ RemoveUserModal activeChatId=activeChatId   }}}
    {{/Modal}}

</div>

