{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esNext",
    "declaration": false,
    "module": "esNext",
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": ["src", "typings/hbs.d.ts"],
  "exclude": ["./src/**/*.test.ts"]
}
